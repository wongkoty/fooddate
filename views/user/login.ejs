<!DOCTYPE html>
<html>
<head>
  <% include ../partials/head.ejs %>
  <title>Login</title>
</head>
<body>
<header>
  <h1>Login</h1>
</header>

    <div id="container">
       
       <% if (message.length > 0) { %>
        <div class='error-alert'>
          <li class="errors"><%= message %></li>
        </div>
        <% } %>

        <form action="/user/login" method="post">
          <div>
            <label>Email</label>
            <input type="text" name="email">
          </div>
          <div>
            <label>Password</label>
            <input type="password" name="password"> <!-- change type to password later -->
          </div>
          <div>
            <button type="submit" class="login-home">Login</button>
          </div>
        </form>
        <div class="bottom-buttons">
          <a href="/">Home</a>
          <a href="./signup">Signup</a>
          <a href="/user/auth/facebook" class="btn btn-primary"><span class="fa fa-facebook"></span> Facebook</a>
        </div>


      </div>

  </body>
</html>
