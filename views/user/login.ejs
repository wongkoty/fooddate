<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <link rel="stylesheet" type="text/css" href="/css/master.css">
  <title>Login</title>
</head>
<body>
<header>
  <h1>Login</h1>
</header>

    <div id="container">
       
       <% if (message.length > 0) { %>
          <div class="error-alert">
            <%= message %>
          </div>
        <% } %>

        <form action="/user/login" method="post">
          <div>
            <label>Email</label>
            <input type="text" name="email">
          </div>
          <div>
            <label>Password</label>
            <input type="password" name="password"> <!-- change type to password later -->
          </div>
          <div>
            <button type="submit">Login</button>
          </div>
        </form>

          <a href="./signup">Signup</a>
          <a href="/">Home</a>


      </div>

  </body>
</html>
